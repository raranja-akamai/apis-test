    "/user-profile/common/timeout-policies": {
      "x-akamai": {
        "path-info": "/user-profile/common/timeout-policies"
      },
      "get": {
        "operationId": "get-user-timeout-policies",
        "summary": "View timeout policies for a user profile",
        "tags": [
          "Policies"
        ],
        "description": "This operation returns the supported session timeout policies an account user can use when [updating](ref:put-user-profile-info) their profile. The `name` for each timeout period is in minutes, and the time `value` is in seconds. Make sure to select a value that's equal or smaller to the **Max session timeout** value, set for your account in the Identity and Access Management interface's [Settings](https://techdocs.akamai.com/iam/docs/account-settings) tab. Administrators should run the [View timeout policies](ref:get-common-timeout-policies) operation before setting a user's timeout policy.\n",
        "responses": {
          "200": {
            "description": "This operation lists the supported session timeout policies.\n",
            "content": {
              "application/json": {
                "example": [
                  {
                    "name": "after15Minutes",
                    "value": 900
                  },
                  {
                    "name": "after30Minutes",
                    "value": 1800
                  },
                  {
                    "name": "after45Minutes",
                    "value": 2700
                  },
                  {
                    "name": "after1Hour",
                    "value": 3600
                  },
                  {
                    "name": "after2Hours",
                    "value": 7200
                  },
                  {
                    "name": "after4Hours",
                    "value": 14400
                  },
                  {
                    "name": "after18Hours",
                    "value": 64800
                  }
                ],
                "schema": {
                  "type": "array",
                  "description": "Specifies session timeout policy options that can be assigned to each user.\n",
                  "minItems": 0,
                  "items": {
                    "type": "object",
                    "description": "Specifies session timeout policy options that can be assigned to users.\n",
                    "additionalProperties": false,
                    "required": [
                      "name",
                      "value"
                    ],
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Descriptive name for the timeout.\n",
                        "minLength": 1
                      },
                      "value": {
                        "type": "integer",
                        "description": "Number of seconds until session timeout.\n",
                        "minimum": 0
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/timezones": {
      "x-akamai": {
        "path-info": "/user-profile/common/timezones"
      },
      "get": {
        "operationId": "get-user-timezones",
        "summary": "View time zones for a user profile",
        "tags": [
          "Locale"
        ],
        "description": "This operation lists the supported time zones in the ISO 8601 format. Users should use the values from this operation to set their `timeZone`. Administrators should run the [View time zones](ref:get-common-timezones) operation before setting a user's time zone.\n",
        "responses": {
          "200": {
            "description": "The response provides the supported time zones.\n",
            "content": {
              "application/json": {
                "example": [
                  {
                    "timezone": "Asia/Rangoon",
                    "description": "Asia/Rangoon GMT+6",
                    "offset": "+6",
                    "posix": "Asia/Rangoon"
                  },
                  {
                    "timezone": "Australia/Sydney",
                    "description": "Australia/Sydney GMT+10",
                    "offset": "+10",
                    "posix": "Australia/Sydney"
                  },
                  {
                    "timezone": "Etc/GMT+3",
                    "description": "Etc/GMT+3",
                    "offset": "+3",
                    "posix": "Etc/GMT-3"
                  }
                ],
                "schema": {
                  "type": "array",
                  "description": "Specifies time zones that can be assigned to each user.\n",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "description": "Specifies time zones that can be assigned to each user.\n",
                    "additionalProperties": false,
                    "required": [
                      "timezone",
                      "description"
                    ],
                    "properties": {
                      "description": {
                        "type": "string",
                        "description": "Descriptive label for the time zone, including the `+` or `-` offset from GMT.\n",
                        "minLength": 1
                      },
                      "timezone": {
                        "type": "string",
                        "description": "The time zone ID.\n",
                        "minLength": 1
                      },
                      "offset": {
                        "type": "string",
                        "description": "The time zone offset from GMT.\n",
                        "minLength": 1
                      },
                      "posix": {
                        "type": "string",
                        "description": "The time zone posix.\n",
                        "minLength": 1
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
