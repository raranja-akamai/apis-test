{
  "openapi": "3.0.0",
  "info": {
    "title": "Common resources, for users",
    "version": "3"
  },
  "servers": [
    {
      "url": "https://{hostname}/identity-management/v3"
    }
  ],
  "paths": {
    "/user-profile/common/contact-types": {
      "x-akamai": {
        "path-info": "/user-profile/common/contact-types"
      },
      "get": {
        "operationId": "get-user-contact-types",
        "summary": "View contact types for a user profile",
        "tags": [
          "Contact types"
        ],
        "description": "This operation lists the supported contact types. Users should use the values from this operation to add or update their `contactType`. Administrators should run the [View contact types](ref:get-common-contact-types) operation before modifying a user's contact type.\n",
        "responses": {
          "200": {
            "description": "The response provides the supported contact types.\n",
            "content": {
              "application/json": {
                "example": [
                  "Billing",
                  "Technical Decision Maker",
                  "Business Decision Maker",
                  "Security"
                ],
                "schema": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/countries": {
      "x-akamai": {
        "path-info": "/user-profile/common/countries"
      },
      "get": {
        "operationId": "get-user-countries",
        "summary": "View supported countries for a user profile",
        "tags": [
          "Locale"
        ],
        "description": "This operation lists the supported countries. Users should use the values from this operation to add or update their `country`. Administrators should run the [View supported countries](ref:get-common-countries) operation before modifying a user's country.\n",
        "responses": {
          "200": {
            "description": "The response provides the supported countries.\n",
            "content": {
              "application/json": {
                "example": [
                  "Lao People's Democratic Republ",
                  "Greece",
                  "Greenland",
                  "Grenada",
                  "Tanzania, United Republic of",
                  "Thailand",
                  "Togo",
                  "Tokelau",
                  "Tonga",
                  "Djibouti",
                  "Dominica",
                  "Christmas Island",
                  "Cocos (Keeling) Islands",
                  "Colombia",
                  "Comoros",
                  "Curacao"
                ],
                "schema": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/countries/{country}/states": {
      "x-akamai": {
        "path-info": "/user-profile/common/countries/{country}/states"
      },
      "parameters": [
        {
          "name": "country",
          "in": "path",
          "description": "Filters the results by country, but only returns lists of states and provinces for `USA` and `Canada`.\n",
          "required": true,
          "schema": {
            "type": "string",
            "example": "canada"
          }
        }
      ],
      "get": {
        "operationId": "get-user-states",
        "summary": "View states for a user profile",
        "tags": [
          "Locale"
        ],
        "description": "This operation lists the supported U.S. states or Canadian provinces. Users should use the values from this operation to add or update their `state`. Administrators should run the [View states](ref:get-common-states) operation before modifying a user's state.\n",
        "responses": {
          "200": {
            "description": "The response provides the supported U.S. states or Canadian provinces.\n",
            "content": {
              "application/json": {
                "example": [
                  "AB",
                  "BC",
                  "PQ",
                  "NS",
                  "NT",
                  "NU",
                  "QC",
                  "YK",
                  "NB",
                  "MB",
                  "PE",
                  "TBD",
                  "NF",
                  "SK",
                  "ON"
                ],
                "schema": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/notification-products": {
      "x-akamai": {
        "path-info": "/user-profile/common/notification-products"
      },
      "get": {
        "operationId": "get-user-notification-products",
        "summary": "View products for a user profile",
        "tags": [
          "Products"
        ],
        "description": "This operation lists the products a user can subscribe to and receive notifications for on the account. The account is determined by the tokens in your API client. Users should use the values from this operation to set their product notifications. Administrators should run the [View products](ref:get-common-notification-products) operation before setting a user's product notifications.\n",
        "responses": {
          "200": {
            "description": "The response provides the supported products.\n",
            "content": {
              "application/json": {
                "example": [
                  "EdgeComputing for Java",
                  "Streaming",
                  "Enhanced DNS",
                  "Site Delivery",
                  "Secure FreeFlow (HTTPS Content Delivery using ARLs)",
                  "Log Delivery Service",
                  "Site Acceleration",
                  "Web Application Accelerator",
                  "EdgeScape",
                  "Security",
                  "NetStorage"
                ],
                "schema": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/password-policy": {
      "x-akamai": {
        "path-info": "/user-profile/common/password-policy"
      },
      "get": {
        "operationId": "get-user-password-policy",
        "summary": "View password policy for a user profile",
        "tags": [
          "Policies"
        ],
        "description": "This operation lists the password policy for the account. The account is determined by the tokens in your API client. Users should use the values from this operation to set their password policy.  Administrators should run the [View password policy](ref:get-common-password-policy) operation before setting a user's password policy.\n",
        "responses": {
          "200": {
            "description": "The response provides the password policy.\n",
            "content": {
              "application/json": {
                "example": {
                  "pwclass": "aka90",
                  "minLength": 8,
                  "minLetters": 1,
                  "minDigits": 1,
                  "caseDif": 0,
                  "minNonAlpha": 0,
                  "maxRepeating": 2,
                  "minReuse": 4,
                  "rotateFrequency": 90
                },
                "schema": {
                  "type": "object",
                  "description": "Encapsulates all information for a password policy.\n",
                  "additionalProperties": false,
                  "required": [
                    "pwclass",
                    "minLength",
                    "minLetters",
                    "minDigits",
                    "caseDif",
                    "minNonAlpha",
                    "maxRepeating",
                    "minReuse"
                  ],
                  "properties": {
                    "minLength": {
                      "type": "integer",
                      "description": "The minimum length of a password.\n",
                      "minimum": 0
                    },
                    "caseDif": {
                      "type": "integer",
                      "description": "The number of characters that, at minimum, need to be in a different case. For example, a value of 1 means at least one letter needs to be uppercase if the rest are lowercase.\n",
                      "minimum": 0
                    },
                    "maxRepeating": {
                      "type": "integer",
                      "description": "The maximum allowed number of repeating characters.\n",
                      "minimum": 0
                    },
                    "minDigits": {
                      "type": "integer",
                      "description": "The minimum number of digits in a password.\n",
                      "minimum": 0
                    },
                    "minLetters": {
                      "type": "integer",
                      "description": "The minimum number of letters in a password.\n",
                      "minimum": 0
                    },
                    "minNonAlpha": {
                      "type": "integer",
                      "description": "The minimum number of non-alphabetic characters in a password.\n",
                      "minimum": 0
                    },
                    "minReuse": {
                      "type": "integer",
                      "description": "The minimum number of previous passwords to retain to prevent password reuse.\n",
                      "minimum": 0
                    },
                    "pwclass": {
                      "type": "string",
                      "description": "Unique identifier for a password policy.\n",
                      "minLength": 1
                    },
                    "rotateFrequency": {
                      "type": "integer",
                      "description": "The number of days a password is valid.\n",
                      "minimum": 0
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
