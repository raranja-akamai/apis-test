          "200": {
            "description": "The response provides the supported languages.\n",
            "content": {
              "application/json": {
                "example": [
                  "Deutsch",
                  "English",
                  "Español",
                  "Español (España)",
                  "Français",
                  "Italiano",
                  "Português",
                  "中文 (简体)",
                  "中文 (繁體)",
                  "日本語",
                  "한국어"
                ],
                "schema": {
                  "type": "array",
                  "minItems": 0,
