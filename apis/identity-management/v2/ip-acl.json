                  "cidrBlock": "128.5.6.6/24",
                  "createdDate": "2017-07-27T18:11:25.000Z",
                  "createdBy": "hgildong",
                  "modifiedDate": "2017-07-27T18:11:25.000Z",
                  "modifiedBy": "szhang",
