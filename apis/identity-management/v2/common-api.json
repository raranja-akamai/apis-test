    "/user-admin/common/countries/{country}/states": {
      "parameters": [
        {
          "name": "country",
          "in": "path",
          "description": "Filters the results by country, but only returns lists of states and provinces for `USA` and `Canada`.",
          "x-akamai": {
            "file-path": "parameters/country-path.yaml"
          },
          "required": true,
          "schema": {
            "type": "string",
            "example": "Canada"
          }
        }
      ],
      "get": {
        "operationId": "get-common-states",
        "summary": "View states",
        "tags": [
          "Locale"
        ],
        "description": "List U.S. states or Canadian provinces. If `country=USA` you may enter a value of `TBD` if you don't know a user's state. Administrators use this operation to set a user's state. Users who modify it need to run [View states for a user profile](ref:get-user-states).\n",
        "responses": {
          "200": {
            "description": "The response lists states.\n",
            "content": {
              "application/json": {
                "example": [
                  "AB",
                  "BC",
                  "PQ",
                  "NS",
                  "NT",
                  "NU",
                  "QC",
                  "YK",
                  "NB",
                  "MB",
                  "PE",
                  "TBD",
                  "NF",
                  "SK",
                  "ON"
                ],
                "schema": {
                  "type": "array",
                  "description": "Lists available values.",
                  "x-akamai": {
                    "file-path": "schemas/ListOfString.yaml"
                  },
                  "items": {
                    "type": "string",
                    "description": "Available value.\n"
                  }
                }
              }
            }
          }
        }
      }
