    "/user-profile/common/countries/{country}/states": {
      "parameters": [
        {
          "name": "country",
          "in": "path",
          "description": "Filters the results by country, but only returns lists of states and provinces for `USA` and `Canada`.",
          "x-akamai": {
            "file-path": "parameters/country-path.yaml"
          },
          "required": true,
          "schema": {
            "type": "string",
            "example": "Canada"
          }
        }
      ],
      "get": {
        "operationId": "get-user-states",
        "summary": "View states for a user profile",
        "tags": [
          "Locale"
        ],
        "description": "Returns country states. Users can run this operation to set their state in their own profile. Administrators who modify a user's profile should run the [View states](ref:get-common-states) operation.\n",
        "responses": {
          "200": {
            "description": "The response lists states.\n",
            "content": {
              "application/json": {
                "example": [
                  "AB",
                  "BC",
                  "PQ",
                  "NS",
                  "NT",
                  "NU",
