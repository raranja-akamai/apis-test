    "/user-profile/common/notification-products": {
      "get": {
        "operationId": "get-user-notification-products",
        "summary": "View products for a user profile",
        "tags": [
          "Products"
        ],
        "description": "Return all products a user can subscribe to and receive notifications for on the account. The account is determined by the tokens in your API client. Users can run this operation to modify the set of products for which they receive notifications.  Administrators who modify a user's profile should run the [View products](ref:get-common-notification-products) operation.\n",
        "responses": {
          "200": {
            "description": "The response lists products.\n",
            "content": {
              "application/json": {
                "example": [
                  "EdgeComputing for Java",
                  "Streaming",
                  "Enhanced DNS",
                  "Site Delivery",
                  "Secure FreeFlow (HTTPS Content Delivery using ARLs)",
                  "Log Delivery Service",
                  "Site Acceleration",
                  "Web Application Accelerator",
                  "EdgeScape",
                  "Security",
                  "NetStorage"
                ],
                "schema": {
                  "type": "array",
                  "description": "Lists available values.",
                  "x-akamai": {
                    "file-path": "schemas/ListOfString.yaml"
                  },
                  "items": {
                    "type": "string",
                    "description": "Available value.\n"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/password-policy": {
      "get": {
        "operationId": "get-user-password-policy",
        "summary": "View password policy for a user profile",
        "tags": [
          "Policies"
        ],
        "description": "Return the password policy for the current account. The current account is determined by the tokens in your API client. Users can run this operation to modify their own profile's password policy.  Administrators who modify a user's profile should run the [View password policy](ref:get-common-password-policy) operation.\n",
        "responses": {
          "200": {
            "description": "The response returns the password policy.\n",
            "content": {
              "application/json": {
                "example": {
                  "pwclass": "aka90",
                  "minLength": 8,
                  "minLetters": 1,
                  "minDigits": 1,
                  "caseDif": 0,
                  "minNonAlpha": 0,
                  "maxRepeating": 2,
                  "minReuse": 4,
                  "rotateFrequency": 90
                },
                "schema": {
                  "type": "object",
                  "description": "Encapsulates all information for a password policy.",
                  "x-akamai": {
                    "file-path": "schemas/PortalPasswordClass.yaml"
                  },
                  "additionalProperties": false,
                  "required": [
                    "pwclass",
                    "minLength",
                    "minLetters",
                    "minDigits",
                    "caseDif",
                    "minNonAlpha",
                    "maxRepeating",
                    "minReuse"
                  ],
                  "properties": {
                    "minLength": {
                      "type": "integer",
                      "description": "The minimum length of a password.\n"
                    },
                    "caseDif": {
                      "type": "integer",
                      "description": "The minimum number of characters with a different case. For example, a value of 1 means at least one letter needs to be uppercase if the rest are lowercase.\n"
                    },
                    "maxRepeating": {
                      "type": "integer",
                      "description": "The maximum allowed number of repeating characters.\n"
                    },
                    "minDigits": {
                      "type": "integer",
                      "description": "The minimum number of digits in a password.\n"
                    },
                    "minLetters": {
                      "type": "integer",
                      "description": "The minimum number of letters in a password.\n"
                    },
                    "minNonAlpha": {
                      "type": "integer",
                      "description": "The minimum number of non-alphabetic characters in a password.\n"
                    },
                    "minReuse": {
                      "type": "integer",
                      "description": "The minimum number of previous passwords to retain to prevent password reuse.\n"
                    },
                    "pwclass": {
                      "type": "string",
                      "description": "A unique identifier for a password policy.\n"
                    },
                    "rotateFrequency": {
                      "type": "integer",
                      "description": "The number of days a password is valid.\n"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/supported-languages": {
      "get": {
        "operationId": "get-user-languages",
        "summary": "View languages for a user profile",
        "tags": [
          "Locale"
        ],
        "description": "List all the possible languages Akamai supports. Use the values from this API to set the preferred `language` for a user. Users should see Control Center in the language you set for them. Users can run this operation to set their own profile's preferred language.  Administrators who modify a user's profile should run the [View languages](ref:get-common-languages) operation.\n",
        "responses": {
          "200": {
            "description": "The response lists languages.\n",
            "content": {
              "application/json": {
                "example": [
                  "Deutsch",
                  "English",
                  "Español",
                  "Español (España)",
                  "Français",
                  "Italiano",
                  "Português",
                  "中文 (简体)",
                  "中文 (繁體)",
                  "日本語",
                  "한국어"
                ],
                "schema": {
                  "type": "array",
                  "description": "Lists available values.",
                  "x-akamai": {
                    "file-path": "schemas/ListOfString.yaml"
                  },
                  "items": {
                    "type": "string",
                    "description": "Available value.\n"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/timeout-policies": {
      "get": {
        "operationId": "get-user-timeout-policies",
        "summary": "View timeout policies for a user profile",
        "tags": [
          "Policies"
        ],
        "description": "Lists all the possible session timeout policies that Akamai supports. Use the values from this operation to set the `sessionTimeout` for a user. The `name` for each timeout period is in minutes, and the time `value` is in seconds. Users can run this operation to modify their own profile's timeout policy.  Administrators who modify a user's profile should run the [View timeout policies](ref:get-common-timeout-policies) operation.\n",
        "responses": {
          "200": {
            "description": "The response returns timeout policies.\n",
            "content": {
              "application/json": {
                "example": [
                  {
                    "name": "after15Minutes",
                    "value": 900
                  },
                  {
                    "name": "after30Minutes",
                    "value": 1800
                  },
                  {
                    "name": "after45Minutes",
                    "value": 2700
                  },
                  {
                    "name": "after1Hour",
                    "value": 3600
                  },
                  {
                    "name": "after2Hours",
                    "value": 7200
                  },
                  {
                    "name": "after4Hours",
                    "value": 14400
                  },
                  {
                    "name": "after18Hours",
                    "value": 64800
                  }
                ],
                "schema": {
                  "type": "array",
                  "description": "Specifies session timeout policy options that can be assigned to each user.",
                  "x-akamai": {
                    "file-path": "schemas/ListOfSessionTimeoutPolicy.yaml"
                  },
                  "items": {
                    "type": "object",
                    "description": "Specifies session timeout policy options that can be assigned to each user.",
                    "x-akamai": {
                      "file-path": "schemas/SessionTimeoutPolicy.yaml"
                    },
                    "additionalProperties": false,
                    "required": [
                      "name",
                      "value"
                    ],
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "The unit of time in which the timeout is measured. The timeout is measured in seconds.\n"
                      },
                      "value": {
                        "type": "integer",
                        "description": "The number of seconds until the timeout.\n"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user-profile/common/timezones": {
      "get": {
        "operationId": "get-user-timezones",
        "summary": "View time zones for a user profile",
        "tags": [
          "Locale"
        ],
        "description": "List all time zones Akamai supports. Time zones are in ISO 8601 format. Use the values from this operation to set the `timeZone` for a user. Users can run this operation to modify their own profile's time zone.  Administrators who modify a user's profile should run the [View time zones](ref:get-common-timezones) operation.\n",
        "responses": {
          "200": {
            "description": "The response lists time zones.\n",
            "content": {
              "application/json": {
                "example": [
                  {
                    "timezone": "Asia/Rangoon",
                    "description": "Asia/Rangoon GMT+6",
                    "offset": "+6",
                    "posix": "Asia/Rangoon"
                  },
                  {
                    "timezone": "Australia/Sydney",
                    "description": "Australia/Sydney GMT+10",
                    "offset": "+10",
                    "posix": "Australia/Sydney"
                  },
                  {
                    "timezone": "Etc/GMT+3",
                    "description": "Etc/GMT+3",
                    "offset": "+3",
                    "posix": "Etc/GMT-3"
                  }
                ],
                "schema": {
                  "description": "Specifies time zones that can be assigned to each user.",
                  "items": {
                    "type": "object",
                    "description": "Specifies time zones that can be assigned to each user.",
                    "x-akamai": {
                      "file-path": "schemas/TimeZone.yaml"
                    },
                    "additionalProperties": false,
                    "required": [
                      "timezone",
                      "description"
                    ],
                    "properties": {
                      "description": {
                        "type": "string",
                        "description": "The description of a time zone, including the GMT +/-.\n"
                      },
                      "offset": {
                        "type": "string",
                        "description": "The time zone offset from GMT.\n"
                      },
                      "posix": {
                        "type": "string",
                        "description": "The time zone posix.\n"
                      },
                      "timezone": {
                        "type": "string",
                        "description": "The time zone ID.\n"
                      }
                    }
                  },
                  "type": "array",
                  "x-akamai": {
                    "file-path": "schemas/ListOfTimeZones.yaml"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
