    "/user-admin/common/timeout-policies": {
      "x-akamai": {
        "file-path": "paths/timeout-policies-admin.yaml",
        "path-info": "/user-admin/common/timeout-policies"
      },
      "get": {
        "operationId": "get-common-timeout-policies",
        "summary": "View timeout policies",
        "tags": [
          "Policies"
        ],
        "description": "This operation returns the supported session timeout policies an administrator can use when [creating](ref:post-ui-identity) and [updating](ref:put-ui-identity-basic-info) user profiles. The `name` for each timeout period is in minutes, and the time `value` is in seconds. Make sure to select a value that's equal or smaller to the **Max session timeout** value, set for your account in the Identity and Access Management interface's [Settings](https://techdocs.akamai.com/iam/docs/account-settings) tab. Users should run the [View timeout policies for a user profile](ref:get-user-timeout-policies) operation before setting their timeout policy.\n",
        "responses": {
          "200": {
            "description": "This operation lists the supported session timeout policies.\n",
            "content": {
              "application/json": {
                "example": [
                  {
                    "name": "after15Minutes",
                    "value": 900
                  },
                  {
                    "name": "after30Minutes",
                    "value": 1800
                  },
                  {
                    "name": "after45Minutes",
                    "value": 2700
                  },
                  {
                    "name": "after1Hour",
                    "value": 3600
                  },
                  {
                    "name": "after2Hours",
                    "value": 7200
                  },
                  {
                    "name": "after4Hours",
                    "value": 14400
                  },
                  {
                    "name": "after18Hours",
                    "value": 64800
                  }
                ],
                "schema": {
                  "description": "Specifies session timeout policy options that can be assigned to each user.",
                  "items": {
                    "additionalProperties": false,
                    "description": "Specifies session timeout policy options that can be assigned to users.",
                    "properties": {
                      "name": {
                        "description": "Descriptive name for the timeout.\n",
                        "minLength": 1,
                        "type": "string"
                      },
                      "value": {
                        "description": "Number of seconds until session timeout.\n",
                        "minimum": 0,
                        "type": "integer"
                      }
                    },
                    "required": [
                      "name",
                      "value"
                    ],
                    "type": "object",
                    "x-akamai": {
                      "file-path": "schemas/session-timeout-policy.yaml"
                    }
                  },
                  "minItems": 0,
                  "type": "array",
                  "x-akamai": {
                    "file-path": "schemas/list-of-session-timeout-policy.yaml"
                  }
                }
              }
            }
          }
        }
      }
    },
